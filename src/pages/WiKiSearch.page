<apex:page controller="WiKiSearchController" doctype="html-5.0" sidebar="false" showheader="false" standardStylesheets="false">
    <apex:composition template="WikiTemplateWithBootstrap3">
        <apex:define name="body">
            <div class="container">
                <div class="col-md-8">
                    <div class="page-header">
                      <h2>WiKi Search <small>please input search key</small></h2>
                    </div>
                    <div class="row">
                        <apex:form >
                            <div class="col-sm-10">
                                <apex:inputText value="{!Key}" styleClass="form-control" html-placeholder="Search"/>
                            </div>
                            <div class="col-sm-2">
                                <apex:commandButton action="{!search}" value="Search" styleClass="btn btn-default"/>
                            </div>
                        </apex:form>
                    </div>
                    <apex:repeat value="{!MyWiKiPages}" var="page" rendered="{!MyWiKiPages.size > 0}">
                        <div class=".navbar-left">
                            <apex:outputLink value="{!$Page.WikiViewPage}?id={!page.Id}" target="_blank">
                                <h3>{!page.Title}</h3>
                            </apex:outputLink>
                            {!page.Body}                                
                        </div>
                    </apex:repeat>
                    <apex:form rendered="{!OR(PreviousCursor != null, NextCursor != null)}">
                        <div class="row">
                            <ul class="pager">
                              <li>
                                  <apex:commandButton value="Previous" action="{!previous}" disabled="{!PreviousCursor == null}" styleClass="btn btn-default" style="color: #538BCA">
                                  </apex:commandButton>
                              </li>
                              <li>
                                  <apex:commandButton value="Next" action="{!next}" disabled="{!NextCursor == null}" styleClass="btn btn-default" style="color: #538BCA">
                                  </apex:commandButton>
                              </li>
                            </ul>
                        </div>
                    </apex:form>
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </apex:define>
    </apex:composition>
</apex:page>